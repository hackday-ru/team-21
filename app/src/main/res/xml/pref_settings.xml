<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Таймер отмены (в секундах)"
        android:summary="10 секунд"
        android:key="sosDelayTime"
        android:defaultValue="5" />

    <SwitchPreference
        android:key="useHeadphonesAsTrigger"
        android:title="Отключение наушников как сигнал"
        android:defaultValue="true" />

    <Preference
        android:title="Пин для отмены"
        android:summary=""
        android:key="cancellationPin" />

</PreferenceScreen>