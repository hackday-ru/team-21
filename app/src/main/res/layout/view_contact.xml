<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_below="@id/toolbar">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_perm_contact_calendar_black_24dp"
        android:tint="@color/colorIcons"/>
    <TextView
        android:id="@+id/contact_name"
        style="@style/single_line.large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:text="Name"/>
    <TextView
        android:id="@+id/contact_number"
        style="@style/single_line.small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_name"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="+7(911)122-34-56"/>
    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_37474F"/>
    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:tint="@color/colorIcons"/>

</RelativeLayout>