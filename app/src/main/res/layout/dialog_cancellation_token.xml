<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/old_pin_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp"
        android:gravity="center_horizontal"
        android:text="Old PIN"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="130dp"
        android:id="@+id/old_pin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/new_pin_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:gravity="center_horizontal"
        android:text="New PIN"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/new_pin"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/confirm_new_pin_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="245dp"
        android:gravity="center_horizontal"
        android:text="Confirm new PIN"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="270dp"
        android:id="@+id/new_pin_confirmation"
        android:layout_alignStart="@+id/new_pin" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/change_message_button"
        android:text="Отмена"
        android:layout_alignStart="@id/new_pin" />


    <Button
        android:id="@+id/set_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/change_message_button"
        android:text="Сохранить"
        android:layout_alignBaseline="@+id/cancel_button"
        android:layout_alignBottom="@+id/cancel_button"
        android:layout_marginTop="310dp"
        android:layout_alignEnd="@+id/new_pin"
        android:textSize="14dp" />


</RelativeLayout>